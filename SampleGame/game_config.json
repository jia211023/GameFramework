{
  "game_name": "SampleGame",
  "version": "0.2.0",
  "url": "https://github.com/Jesse-Jumbo/GameFramework/tree/feature/SampleGame",
  "description": "一個簡易完整的遊戲",
  "logo": [
    "./asset/image/TreasureChest.svg",
    "https://raw.githubusercontent.com/Jesse-Jumbo/GameFramework/main/MyGame/asset/image/TreasureChest.svg"
  ],
  "user_num": {
    "min": 1,
    "max": 1
  },
  "game_params": [
    {
      "name": "frame_limit",
      "verbose": "遊戲總幀數(Frame)",
      "type": "int",
      "max": 30000,
      "min": 30,
      "default": 3000,
      "help": "set the frame number of game frame limit."
    },
    {
      "name": "target_score",
      "verbose": "遊戲目標分數",
      "type": "int",
      "max": 30000,
      "min": 30,
      "default": 1000,
      "help": "set the target score of game to win."
    },
    {
      "name": "is_sound",
      "verbose": "遊戲音效",
      "type": "str",
      "choices": [
        {
          "verbose": "開",
          "value": "on"
        },
        {
          "verbose": "開",
          "value": "off"
        }
      ],
      "help": "'off' can turn off the sound.",
      "default": "on"
    }
  ]
}
